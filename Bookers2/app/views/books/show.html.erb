<%= flash[:notice] %>

<% if @book.errors.any? %>
    <h3>There is an error in the entered content<%= @book.errors.count %>There are cases</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <table class='table'>
        <tbody>
        <tr></tr>
        <tr>
	       <th>name</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
       </tr>
       <tr>
       <th>follows</th>
        <th><%= link_to "#{@user.follower.count}", user_follower_path(@user.id) %></th>
       </tr>
       <tr>
         <th>followers</th>
        <th><%= link_to "#{@user.followed.count}", user_followed_path(@user.id) %></th>
       </tr>

       <tr>
         <% unless @user == current_user %>
         <th>
         <% if current_user.following?(@user) %>
         <%= link_to user_relationships_path(@user.id), method: :delete do %>
         <div class="btn btn-danger">
         <span>フォロー外す</span>
         </div>
         <% end %>
         <% else %>
         <%= link_to user_relationships_path(@user.id), method: :POST do %>
         <div class="btn btn-success">
         <span>フォローする</span>
         </div>
         <% end %>
         <% end %>
         <% end %>
         </th>
       </tbody>
      </table>
      <div class="row">
　　　<%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %><i class="fas fa-user-cog"></i><% end %>
　　　</div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book_new, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        <%= f.submit class: 'btn btn-success' do %>
        <span>Create Book</span>
        <% end %>
        </div>
        <% end %>


<div class='col-md-8 offset-md-1'>
<h2>Book detail</h2>
  <table class='table'>
    <thread>
      <tr>
        <th></th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thread>
    <tbody>
      <tr>
      <td><%= link_to user_path(@user.id) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
      <%= @user.name %>
      <% end %>
      <td>
        <%= link_to @book.title, "/books/#{@book.id}" %>
      </td>
      <td><%= @book.body %></td>
      　　　<td>
　　　<% if @book.favorited_by?(current_user) %>
    <p>
      <%= link_to book_favorites_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to book_favorites_path(@book), method: :post do %>
        ♡<%= @book.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  </td>

  <td>

<p>コメント件数：<%= @book.book_comments.count %></p>
</td>



      <% if user_signed_in? && @book.user_id == current_user.id %>


      <td><%= link_to edit_book_path(@book.id), class: 'btn btn-success' do %>
      <span>Edit</span>
      <% end %>
      </td>

　　　<td>
      <%= link_to book_path(@book.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <div class="btn btn-danger">
      <span>Destroy</span>
       </div>
      <% end %>
      </td>
　　　<% end %>
      </tr>
    </tbody>
  </table>

  <div class="comments">
<% @book.book_comments.each do |book_comment| %>
  <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <%= book_comment.user.name %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
  <div class="comment-delete">
<%= link_to book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <div class="btn btn-danger">
      <span>Destroy</span>
      </div>
      <% end %>
      <% end %>
<% end %>
</div>



  <div class="new-comment">
<%= form_with(model:[@book, @book_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>
