<%= flash[:notice] %>

<% if @book.errors.any? %>
    <h3>There is an error in the entered content<%= @book.errors.count %>There are cases</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

